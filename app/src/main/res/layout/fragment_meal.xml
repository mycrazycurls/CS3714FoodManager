<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MealFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/saved_meals_album_meal_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/meal_rating_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/saved_meals_album_meal_toolbar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/day_menu"
            app:navigationIcon="@drawable/ic_day_navigation"
            app:title="Default"
            app:titleCentered="true" />

    </com.google.android.material.appbar.AppBarLayout>

    <RatingBar
        android:id="@+id/meal_rating_bar"
        android:isIndicator="true"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/saved_meals_albums_meals_ingredients_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saved_meals_album_meal_appbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/saved_meals_albums_meals_ingredients_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/presitgeblue"
        android:text="Ingredients"
        android:textAlignment="center"
        android:textColor="#EFEDED"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/saved_meals_albums_meals_ingredient_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meal_rating_bar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/saved_meals_albums_meals_ingredient_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/saved_meals_albums_meals_instructions_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saved_meals_albums_meals_ingredients_header">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/saved_meals_albums_meals_instructions_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/presitgeblue"
        android:text="Instructions"
        android:textAlignment="center"
        android:textColor="#EFEDED"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/saved_meals_albums_meals_instructions_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/saved_meals_albums_meals_ingredient_list" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/saved_meals_albums_meals_instructions_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/saved_meals_albums_meals_cost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saved_meals_albums_meals_instructions_header">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/saved_meals_albums_meals_cost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/presitgeblue"
        android:text="$10.98"
        android:textAlignment="center"
        android:textColor="#EFEDED"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/saved_meals_albums_meals_calories"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saved_meals_albums_meals_instructions_list" />

    <TextView
        android:id="@+id/saved_meals_albums_meals_calories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/presitgeblue"
        android:text="1200 Calories"
        android:textAlignment="center"
        android:textColor="#EFEDED"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saved_meals_albums_meals_cost" />

</androidx.constraintlayout.widget.ConstraintLayout>